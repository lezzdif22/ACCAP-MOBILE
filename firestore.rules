rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if true;
    }
  }
}

service firebase.storage {
  match /b/{bucket}/o {
    // 🔒 Restrict user images: Only the user can read/write their images
    match /user_images/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 🌍 Allow public read access for announcements
    match /announcements/{allPaths=**} {
      allow read;  // Anyone can read announcement images
      allow write: if request.auth != null;  // Only authenticated users can upload
    }
  }
}
