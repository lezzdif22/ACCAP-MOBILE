rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ðŸ”“ Allow public read and authenticated write access for announcements
    match /announcements/{document=**} {
      allow read;
      allow write: if request.auth != null;
    }

    // ðŸ”’ Restrict user data: Only the authenticated user can access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // âœ… Default rule: Allow everything (only for testing!)
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
